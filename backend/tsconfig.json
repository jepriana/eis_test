{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "./src/types"],
        "sourceMap": true,
        "outDir": "dist",
        "strict": true,
        "target": "ES2020",
        "module": "CommonJS",
        "esModuleInterop": true,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*", "src/types/*", "prisma"],
    "exclude": ["node_modules", "dist"],
}