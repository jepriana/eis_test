{
    "compilerOptions": {
        "typeRoots": ["node_modules/@types", "./src/types"],
        "sourceMap": true,
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
    },
    "include": ["src/**/*", "src/types/*"],
    "exclude": ["node_modules", "dist"],
  }
  